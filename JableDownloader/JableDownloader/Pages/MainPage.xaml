<?xml version="1.0" encoding="utf-8" ?>
<FlyoutPage xmlns="http://xamarin.com/schemas/2014/forms"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            x:Class="JableDownloader.Pages.MainPage"
            xmlns:pages="clr-namespace:JableDownloader.Pages"
            xmlns:font="clr-namespace:FontAwesome">

    <FlyoutPage.ToolbarItems>
        <ToolbarItem x:Name="SearchIcon" Order="Primary">
            <ToolbarItem.IconImageSource>
                <FontImageSource FontFamily="FAS" Glyph="{Static font:FontAwesomeIcons.MagnifyingGlass}" Size="Large"/>
            </ToolbarItem.IconImageSource>
        </ToolbarItem>
    </FlyoutPage.ToolbarItems>

    <FlyoutPage.Flyout>
        <pages:MenuPage x:Name="FlyoutPage"/>
    </FlyoutPage.Flyout>

</FlyoutPage>